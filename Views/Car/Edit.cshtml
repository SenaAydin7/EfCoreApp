@model Cars 

<h2>Car Update</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Car" asp-action="Edit" method="post">
            <input type="hidden" asp-for="CarId">
            <div class="mb-3">
                <label asp-for="CarName" class="form-label">Car Name</label>
                <input asp-for="CarName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="CarModel" class="form-label">Car Model</label>
                <input asp-for="CarModel" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="CarPrice" class="form-label">Price</label>
                <input asp-for="CarPrice" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="CarImage" class="form-label">Car Image</label>
                <input asp-for="CarImage" class="form-control">
            </div>
            <button type="submit" class="btn btn-danger" style="background-color: #950014;border:#950014">Save</button>
        
        </form>
    </div>
    <div class="col-4">
        <h4>Shops</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.ShopReg)
            {
                <li>@item.Shop.Title</li>
            }
        </ul>
    </div>
</div>
